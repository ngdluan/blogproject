generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["extendedWhereUnique", "interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(uuid())
  name    String?
  email   String?
  Group   Group[]
  iAt     DateTime @default(now())
  uAt     DateTime @updatedAt
  Event   Event?   @relation(fields: [eventId], references: [id])
  eventId String?
}

model Group {
  id      String   @id @default(uuid())
  name    String?
  User    User[]
  iAt     DateTime @default(now())
  uAt     DateTime @updatedAt
  Event   Event?   @relation(fields: [eventId], references: [id])
  eventId String?
}

model Event {
  id      String    @id @default(uuid())
  name    String
  where   String?
  when    DateTime?
  link    String?
  Address Adress[]
  User    User[]
  Group   Group[]
  iAt     DateTime  @default(now())
  uAt     DateTime  @updatedAt
}

model Adress {
  id      String  @id @default(uuid())
  name    String
  detail  String?
  Event   Event[]
  eventId String?
}

model Image {
  id   String @id @default(uuid())
  link String
}
